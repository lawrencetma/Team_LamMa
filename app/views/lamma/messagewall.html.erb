<%= render partial: "new_message" %>
<section class="regular overflow-hidden">
  <h1 class="cursive">Messages for Helen & Lawrence</h1>

  &nbsp;&nbsp;&nbsp;&nbsp;<a href="#" data-toggle="modal" data-target="#new_message">Write us a Message!</a>
  <div class="list-group">
    <% if @messages %>
      <% @messages.each do |message| %>
        <div class="messages list-group-item">
          <p>
            <%= message.text %>
          </p>
          <p>
            - <%= message.from %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</section>